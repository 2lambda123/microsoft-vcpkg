{
  "name": "xserver",
  "version": "21.1.1",
  "description": "C interface to the X Window System protocol, which replaces the traditional Xlib interface.",
  "homepage": "https://gitlab.freedesktop.org/xorg/xserver",
  "dependencies": [
    "dbus",
    "libepoxy",
    "nettle",
    "opengl",
    {
      "name": "pciaccess",
      "platform": "!windows"
    },
    "pixman",
    "pthread",
    "tool-meson",
    "libx11",
    "libxau",
    "xcb",
    "xcb-image",
    "xcb-keysyms",
    "xcb-proto",
    "xcb-render-util",
    "xcb-util",
    "xcb-util-m4",
    "xcb-util-wm",
    "libxdmcp",
    "libxfont",
    "libxkbcommon",
    "xkbcomp",
    "libxkbfile",
    "xorg-macros",
    "xproto",
    {
      "name": "xshmfence",
      "platform": "!windows"
    },
    "xtrans",
    "libxv",
    {
      "name": "libxxf86dga",
      "platform": "!windows"
    }
  ],
  "default-features" : [ "platformselect"],
  "features": {
    "platformselect": {
      "description": "Build xwayland server",
      "dependencies": [
        {
          "name": "xserver",
          "default-features": false,
          "features": [
            "xwin"
          ],
          "platform": "windows"
        },
        {
          "name": "xserver",
          "default-features": false,
          "features": [
            "xnest",
            "xorg",
            "xwayland"
          ],
          "platform": "!windows"
        }
      ]
    },
    "xnest": {
      "description": "Build xnest server",
      "dependencies": [
        "libx11",
        "libxau",
        "libxext"
      ]
    },
    "xorg": {
      "description": "Build xorg server",
      "dependencies": [
        "libxcvt"
      ]
    },
    "xwayland": {
      "description": "Build xwayland server",
      "dependencies": [
        "drm",
        "libepoxy",
        "wayland",
        "wayland-protocols"
      ]
    },
    "xwin": {
      "description": "Build xwin server",
      "dependencies": [
        "dirent",
        "xcb-util-wm",
        "libxfixes",
        {
          "name": "opengl-registry",
          "platform": "!windows"
        }
      ]
    }
  }
}
