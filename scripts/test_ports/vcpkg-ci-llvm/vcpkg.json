{
  "name": "vcpkg-ci-llvm",
  "version-string": "0",
  "description": "LLVM features testing within CI.",
  "supports": "!uwp & !(arm & windows)",
  "dependencies": [
    {
      "name": "llvm",
      "default-features": false,
      "features": [
        "clang",
        "default-options",
        "lld",
        "lldb",
        "polly",
        "target-all",
        "tools",
        "utils"
      ]
    },
    {
      "name": "llvm",
      "default-features": false,
      "features": [
        "flang"
      ],
      "platform": "!(x86 & windows)"
    }
  ]
}
