{
  "name": "nanogui",
  "version-string": "2019-09-23",
  "port-version": 3,
  "description": "NanoGUI is a minimalistic cross-platform widget library for OpenGL 3.x or higher.",
  "homepage": "https://github.com/mitsuba-renderer/nanogui",
  "supports": "!uwp",
  "dependencies": [
    "nanovg",
    {
      "name": "vcpkg-cmake",
      "host": true
    }
  ],
  "features": {
    "glad": {
      "description": "Enable glad",
      "dependencies": [
        "glad"
      ]
    },
    "glfw": {
      "description": "Enable glfw",
      "dependencies": [
        "glfw3"
      ]
    },
    "python": {
      "description": "Build Python bindings",
      "dependencies": [
        "python3"
      ]
    }
  }
}
