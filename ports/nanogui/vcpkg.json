{
  "name": "nanogui",
  "version-string": "2021-11-24",
  "description": "NanoGUI is a minimalistic cross-platform C++/Python widget library for OpenGL, GLES2/3, Metal, and WebAssembly/WebGL",
  "homepage": "https://github.com/mitsuba-renderer/nanogui",
  "supports": "!uwp",
  "dependencies": [
    "nanovg",
    {
      "name": "vcpkg-cmake",
      "host": true
    }
  ],
  "features": {
    "glad": {
      "description": "Enable glad",
      "dependencies": [
        "glad"
      ]
    },
    "glfw": {
      "description": "Enable glfw",
      "dependencies": [
        "glfw3"
      ]
    },
    "python": {
      "description": "Build Python bindings",
      "dependencies": [
        "python3"
      ]
    }
  }
}
