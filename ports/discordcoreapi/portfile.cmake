if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 2454c6ee53e9e8092f5f81c11aeb936d2cce1989
	SHA512 ff3faf465f641ce9ba0771e239103a31fa097a42b870ffeb01ac497019614beb0ab41b3c595cbdf0d27fdc0bef05744578df86c6605937c1fbd67d0e52620e41
