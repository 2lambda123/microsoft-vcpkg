if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF cbf9cd725909a987222f354684f6a498e7a2a439
	SHA512 605691912be7c6082de141c61c90808a76571bf4b391d816f43654e8ef6f114888c12dff73ff2ac5783c8c1045a17103b666d9a4ecefeeadd6e06d3f383165ab
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

