if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 4f2f44b942f94aa64ac2586a1d46e39613d77060
	SHA512 bf91e07d33c6cf172896c04a90d1b965d1da12ccf9eaf3c0c5e014b902c4588d0b2aeff66d699e247a9849e0d428b5738f267117105f0878933b584d39070098
