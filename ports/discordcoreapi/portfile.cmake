if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 25c62016e5674c221abeb93da080e4ca2dfb0617
	SHA512 67ce46557ae01f8f00c38c62e1eaff0da7d344de8f5a42dff8ee7540f18856ceca1d3e74d896f2d05265462af003f930b41d1e11ee683f452780c2764e0f8fd1
