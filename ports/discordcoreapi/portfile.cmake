if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF e48257c42ca6f7d3c701f60976d20545b9e203db
	SHA512 27179d8ad630550b3f89a3ff943c5b93cb42c6e6e0798ad097e519183a1157cab42063e8ba912fab0cd0c45d5bcc3894286b9001820a726553f24f179130cf40
