if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF e0855dfe0f6577c51aa045a21796baa27c9046a6
	SHA512 7e3b9f1f8f1ed4d2be80352d8785afa972ca6acf5b9a3de7b946065f815e576b7dcdef134217f23288d062f88769c41acedd24933dd2b7caed737911ede6a84e
