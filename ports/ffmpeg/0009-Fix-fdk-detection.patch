diff --git a/configure b/configure
--- a/configure	(revision eb9a92addf12136c78bd0e558b68fa45b0c963ae)
+++ b/configure	(revision 43fafa041cf45dfda70722e2bb08f5d81fb8c285)
@@ -6571,7 +6571,7 @@
 enabled libdc1394         && require_pkg_config libdc1394 libdc1394-2 dc1394/dc1394.h dc1394_new
