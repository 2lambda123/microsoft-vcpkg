{
  "name": "raylib",
  "version-semver": "4.2.0",
  "description": "A simple and easy-to-use library to enjoy videogames programming",
  "homepage": "https://github.com/raysan5/raylib",
  "license": "Zlib",
  "supports": "!(arm | uwp)",
  "dependencies": [
    "glfw3",
    {
      "name": "libx11",
      "platform": "!windows"
    },
    {
      "name": "libxcursor",
      "platform": "!windows"
    },
    {
      "name": "libxinerama",
      "platform": "!windows"
    },
    {
      "name": "libxrandr",
      "platform": "!windows"
    },
    {
      "name": "opengl",
      "platform": "!windows"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    "use-audio"
  ],
  "features": {
    "hidpi": {
      "description": "Support high-DPI displays"
    },
    "use-audio": {
      "description": "Build raylib with audio module"
    }
  }
}
