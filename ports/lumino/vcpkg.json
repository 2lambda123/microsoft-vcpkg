{
  "name": "lumino",
  "version-string": "0.10.1",
  "description": "Lumino.",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "gtest"
  ],
  "default-features": [
    "engine"
  ],
  "features": {
    "engine": {
      "description": "Make engine module.",
      "dependencies": [
        "nanovg",
        "yaml-cpp",
        "toml11",
        "zlib",
        "libpng",
        "libogg",
        "libvorbis",
        {
          "name": "freetype",
          "features": ["png", "zlib"]
        },
        "pcre2",
        "box2d",
        "bullet3",
        "stb",
        "tinyobjloader",
        "tinygltf",
        {
          "name": "imgui",
          "features": ["docking-experimental"]
        },
        "glslang",
        "spirv-cross",
        "glfw3",
        "vulkan-headers",
        "glad",
        "openal-soft"
      ]
    }
  }
}
