{
  "name": "libcoro",
  "version": "0.9",
  "description": "C++20 coroutine library",
  "homepage": "https://github.com/jbaldwin/libcoro",
  "license": "Apache-2.0",
  "supports": "!windows",
  "dependencies": [
    "tl-expected",
    {
      "name": "vcpkg-cmake",
      "host": true
    }
  ],
  "default-features": [
    "networking",
    "ssl",
    "threading"
  ],
  "features": {
    "networking": {
      "description": "Include networking features.",
      "dependencies": [
        "c-ares"
      ]
    },
    "ssl": {
      "description": "Include SSL features. Requires networking to be enabled.",
      "dependencies": [
        "openssl"
      ]
    },
    "threading": {
      "description": "Include multithreading features."
    }
  }
}
