_find_package(${ARGS})

find_package(LIBZIP)
find_package(ZLIB)
if(TARGET LIBZIPPP::LIBZIPPP)
  set_property(TARGET LIBZIPPP::LIBZIPPP APPEND PROPERTY INTERFACE_LINK_LIBRARIES LIBZIP::LIBZIP ZLIB::ZLIB)
  if(UNIX)
    set_property(TARGET LIBZIPPP::LIBZIPPP APPEND PROPERTY INTERFACE_LINK_LIBRARIES m)
  endif()
endif()
if(LIBZIPPP_LIBRARIES)
  list(APPEND LIBZIPPP_LIBRARIES ${LIBZIP_LIBRARIES} ${ZLIB_LIBRARIES})
  if(UNIX)
    list(APPEND LIBZIPPP_LIBRARIES m)
  endif()
endif()
if(LIBZIPPP_LIBRARY)
  list(APPEND LIBZIPPP_LIBRARY ${LIBZIP_LIBRARIES} ${ZLIB_LIBRARIES})
  if(UNIX)
    list(APPEND LIBZIPPP_LIBRARY m)
  endif()
endif()
