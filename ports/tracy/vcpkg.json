{
  "name": "tracy",
  "version-semver": "0.8.0",
  "port-version": 1,
  "description": "A real time, nanosecond resolution, remote telemetry, hybrid frame and sampling profiler for games and other applications.",
  "homepage": "https://github.com/wolfpld/tracy",
  "license": "BSD-3-Clause",
  "supports": "!(windows & (arm | uwp))",
  "dependencies": [
    {
      "name": "pthreads",
      "platform": "!windows"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "capture": {
      "description": "Build Tracy tool `capture`",
      "supports": "!(windows & x86)",
      "dependencies": [
        {
          "name": "capstone",
          "features": [
            "arm",
            "arm64",
            "x86"
          ]
        }
      ]
    },
    "csvexport": {
      "description": "Build Tracy tool `csvexport`",
      "supports": "!(windows & x86)",
      "dependencies": [
        {
          "name": "capstone",
          "features": [
            "arm",
            "arm64",
            "x86"
          ]
        }
      ]
    },
    "import-chrome": {
      "description": "Build Tracy tool `import-chrome`",
      "supports": "!(windows & x86)",
      "dependencies": [
        {
          "name": "capstone",
          "features": [
            "arm",
            "arm64",
            "x86"
          ]
        }
      ]
    },
    "profiler": {
      "description": "Build Tracy tool `profiler` (aka `Tracy` executable)",
      "supports": "!(windows & x86)",
      "dependencies": [
        {
          "name": "capstone",
          "features": [
            "arm",
            "arm64",
            "x86"
          ]
        },
        "freetype",
        "glfw3"
      ]
    },
    "update": {
      "description": "Build Tracy tool `update`",
      "supports": "!(windows & x86)",
      "dependencies": [
        {
          "name": "capstone",
          "features": [
            "arm",
            "arm64",
            "x86"
          ]
        }
      ]
    }
  }
}
