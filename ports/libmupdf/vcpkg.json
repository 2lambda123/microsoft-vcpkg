{
  "name": "libmupdf",
  "version-string": "1.18.1-so-3.11.14",
  "port-version": 1,
  "description": "a lightweight PDF, XPS, and E-book library",
  "homepage": "https://github.com/ArtifexSoftware/mupdf",
  "supports": "!osx & !arm",
  "dependencies": [
    "curl",
    "freetype",
    "glfw3",
    "gumbo",
    "harfbuzz",
    "jbig2dec",
    "lcms",
    "libjpeg-turbo",
    {
      "name": "libmupdf",
      "host": true,
      "features": [
        "gentool"
      ]
    },
    "openjpeg",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "zlib"
  ],
  "features": {
    "mudraw": {
      "description": "Build tool mudraw"
    },
    "mujs": {
      "description": "Build mujs"
    },
    "mupdf": {
      "description": "Build tool mupdf"
    },
    "muthreads": {
      "description": "Build muthreads"
    },
    "mutool": {
      "description": "Build tool mutool"
    },
    "gentool": {
      "description": "Install tool bin2coff or hexdump"
    }
  }
}
