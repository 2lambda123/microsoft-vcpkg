{
  "name": "avro-cpp",
  "version": "1.11.1",
  "port-version": 1,
  "description": "Apache Avro is a data serialization system",
  "homepage": "https://github.com/apache/avro",
  "supports": "!(windows & static)",
  "dependencies": [
    "boost-algorithm",
    "boost-any",
    "boost-crc",
    "boost-filesystem",
    "boost-format",
    "boost-iostreams",
    "boost-lexical-cast",
    "boost-math",
    "boost-program-options",
    "boost-random",
    "boost-tuple",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    "zlib"
  ],
  "features": {
    "snappy": {
      "description": "Support Snappy for compression",
      "dependencies": [
        "snappy"
      ]
    },
    "test": {
      "description": "Build tests",
      "dependencies": [
        "boost-test"
      ]
    }
  }
}
