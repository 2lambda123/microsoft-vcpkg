The package pcre provides CMake targets:

    find_package(unofficial-pcre CONFIG REQUIRED)
    target_include_directories(main PRIVATE ${PCRE_INCLUDE_DIR})
    target_link_libraries(main PRIVATE ${PCRE_LIBRARY})

    pcre16 linkage:
    target_link_libraries(main PRIVATE ${PCRE16_LIBRARY})
    pcre32 linkage:
    target_link_libraries(main PRIVATE ${PCRE32_LIBRARY})
    pcrecpp linkage:
    target_link_libraries(main PRIVATE ${PCRECPP_LIBRARY})
    pcreposix linkage:
    target_link_libraries(main PRIVATE ${PCREPOSIX_LIBRARY})
