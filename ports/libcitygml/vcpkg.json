{
  "name": "libcitygml",
  "version-semver": "2.4.3",
  "description": "C++ Library for CityGML Parsing and Visualization",
  "homepage": "https://github.com/jklimke/libcitygml",
  "license": "LGPL-2.1-only",
  "dependencies": [
    "opengl",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "xerces-c"
  ],
  "default-features": [
    "gdal",
    "osg"
  ],
  "features": {
    "gdal": {
      "description": "Enable coordinate transformations support",
      "dependencies": [
        "gdal"
      ]
    },
    "osg": {
      "description": "Enable OpenSceneGraph plugin",
      "dependencies": [
        "osg"
      ]
    },
    "tests": {
      "description": "Enable tests"
    },
    "tools": {
      "description": "Enable tools"
    }
  }
}
