+#endif
+#else
+#define MEMBER_DECLSPEC
+#endif
+
 #include <ctype.h>
 #include <stdio.h>
 #include <stdlib.h>
@@ -413,8 +423,8 @@
 		MAX_ENTITY_LENGTH = 6
 
 	};
-	static Entity entity[ NUM_ENTITY ];
-  static bool condenseWhiteSpace;
+  static Entity entity[ NUM_ENTITY ];
+  MEMBER_DECLSPEC static bool condenseWhiteSpace;
 };
 
 
