find_path(vcpkglib_include NAMES vcpkglib.h PATH_SUFFIXES vcpkg REQUIRED)
get_filename_component(vcpkglib_include ${vcpkglib_include} DIRECTORY)
target_include_directories(main PRIVATE ${vcpkglib_include})

find_library(vcpkglib_lib_debug NAMES vcpkglib REQUIRED)
string(REPLACE "/debug/lib/" "/lib/" vcpkglib_lib_release "${vcpkglib_lib_debug}")
target_link_libraries(main PRIVATE "$<IF:$<CONFIG:Debug>,${vcpkglib_lib_debug},${vcpkglib_lib_release}>")

find_package(fmt CONFIG REQUIRED)
target_link_libraries(main PRIVATE fmt::fmt)
