genrule(
    name = "patch_include_dirs",
    cmd = """
current_dir=`pwd`
mkdir $current_dir/patched_includes
cp '${CMAKE_CURRENT_LIST_DIR}/uwppatch.h' $current_dir/patched_includes
echo \\\"$current_dir/patched_includes\\\" >> $(location @local_config_cc//:builtin_include_directory_paths_msvc)
""",
    srcs = [
        "@local_config_cc//:toolchain",
        "@local_config_cc//:builtin_include_directory_paths_msvc",
    ],
    outs = [
        "patched_includes/uwppatch.h"
    ],
)
